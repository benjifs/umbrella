<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ metadata.language or page.lang or "en" }}">
	<title>{{ metadata.title or hcard.name }}</title>
	<subtitle>{{ metadata.description }}</subtitle>
	<link href="{{ permalink | htmlBaseUrl(hcard.url) }}" rel="self" />
	<link href="{{ hcard.url | addPathPrefixToFullUrl }}" />
	<updated>{{ collections.entries | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
	<id>{{ hcard.url | addPathPrefixToFullUrl }}</id>
	<author>
		<name>{{ hcard.name }}</name>
	</author>
	{%- for post in entries %}
	{%- set absolutePostUrl %}{{ post.url | htmlBaseUrl(hcard.url) }}{% endset %}
	<entry>
		<title>{{ post.data.title }}</title>
		<link href="{{ absolutePostUrl }}" />
		<updated>{{ post.date | dateToRfc3339 }}</updated>
		<id>{{ absolutePostUrl }}</id>
		<content type="html">{{ post.content | renderTransforms(post.data.page, hcard.url) }}</content>
	</entry>
	{%- endfor %}
</feed>